
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutZZYZZJLQuery.cshtml";
}
<div id="winMainForm"></div>
<script>
    $('#cmpDG').datagrid({
        url: 'AcceptStat',
        singleSelect:true,
        //pagination: true,
        //rownumbers: true,
        remoteSort: true,
        striped: true,
        @* __TIPS__*: 以下同表格中显示的每列的配置信息 *@
        frozenColumns: [[
            { field: 'SBFZR', title: '制证员名称', width: 100,},
            { field: 'COUNT', title: '数量', width: 180,  align: 'center', },
        ]],
    });
    //初始化分页栏按钮,增加导出Excel功能
    var pager = $("#cmpDG").datagrid().datagrid('getPager')
    pager.pagination({
        buttons: [{
            text: '导出',
            iconCls: 'icon-table-export',
            handler: function () {
                ef3.datagridToExcel("#cmpDG");
            }
        }]
    });
</script>

